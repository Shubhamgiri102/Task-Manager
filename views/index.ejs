<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
    
    <!-- ğŸ“ Form Section -->
    <div class="form p-10 text-white">
      <form action="/create" method="post">
        <input name="title" class="block rounded-md w-full px-5 py-2 bg-zinc-800" 
               type="text" placeholder="Enter Task Title">
        <textarea name="details" class="block w-full rounded-md mt-2 px-5 py-2 bg-zinc-800 resize-none"  
                  placeholder="Write your task details here"></textarea>
        <input class="mt-2 bg-blue-600 rounded-md px-3 py-2" type="submit" value="Create Task">
      </form>
    </div>

    <!-- ğŸ“„ Task Section -->
    <div class="tasks flex gap-3 flex-wrap p-10">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task w-70 bg-zinc-800 px-3 py-4 rounded-md">
            <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
            <div class="flex justify-between mt-3 items-center">
              <a class="text-blue-500 inline-block mt-2" href="/file/<%= val %>">Read More</a>
              <a class="text-blue-500 inline-block mt-2" href="/edit/<%= val %>">Edit</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-600 text-xl">No tasks yet</h3>
      <% } %>
    </div>

    </div>
</body>
</html>
